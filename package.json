{
  "name": "tab-server",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "start": "nest start",
    "start:watch": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "build:docker": "docker buildx build --platform linux/amd64 -t tabhub-prod:amd64 .",
    "format": "npm run lint:fix & npm run prettier:fix",
    "check": "npm run lint & npm run prettier:check",
    "lint": "npx eslint --debug '**/*.{js,jsx,ts,tsx}'",
    "lint:fix": "npx eslint --fix '**/*.{js, jsx, ts, tsx}'",
    "prettier:fix": "prettier --config .prettierrc.js '**/*.{js,jsx,ts,tsx}' --write",
    "prettier:check": "prettier --config .prettierrc.js '**/*.{js,jsx,ts,tsx}' --check",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@apollo/server": "^4.6.0",
    "@nestjs/apollo": "^11.0.5",
    "@nestjs/common": "^9.0.0",
    "@nestjs/config": "^2.3.1",
    "@nestjs/core": "^9.0.0",
    "@nestjs/graphql": "^11.0.5",
    "@nestjs/passport": "^9.0.3",
    "@nestjs/platform-express": "^9.0.0",
    "@nestjs/throttler": "^4.1.0",
    "@sendgrid/mail": "^7.7.0",
    "@trivago/prettier-plugin-sort-imports": "^4.1.1",
    "@types/open-graph-scraper": "^4.8.2",
    "@types/webextension-polyfill": "^0.10.0",
    "apollo-server-core": "^3.12.0",
    "axios": "^1.4.0",
    "body-parser": "^1.20.2",
    "cheerio": "^1.0.0-rc.12",
    "class-validator": "^0.14.0",
    "crypto-js": "^4.1.1",
    "dotenv": "^16.0.3",
    "firebase": "^9.20.0",
    "firebase-admin": "^11.7.0",
    "graphql": "^16.6.0",
    "graphql-redis-subscriptions": "^2.6.0",
    "graphql-subscriptions": "^2.0.0",
    "graphql-upload": "^14.0.0",
    "moment": "^2.29.4",
    "open-graph-scraper": "^6.1.0",
    "openai": "^3.2.1",
    "puppeteer": "^20.5.0",
    "puppeteer-cluster": "^0.23.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "slugify": "^1.6.6",
    "tsyringe": "^4.8.0",
    "uuid": "^9.0.0",
    "webextension-polyfill": "^0.10.0"
  },
  "resolutions": {
    "graphql": "^16.6.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.0.0",
    "@nestjs/testing": "^9.0.0",
    "@types/express": "^4.17.13",
    "@types/graphql-upload": "^16.0.0",
    "@types/jest": "28.1.8",
    "@types/lodash": "^4.14.194",
    "@types/node": "^16.0.0",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "28.1.3",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "28.0.8",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.1.0",
    "typescript": "^4.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
